{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir" : "dist",
    "sourceMap" : true,
    "alwaysStrict" : true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "include": [
    "src"
  ]
}
